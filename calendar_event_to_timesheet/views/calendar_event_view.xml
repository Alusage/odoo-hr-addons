<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calendar_event_form_inherit_calendar" model="ir.ui.view">
        <field name="name">view_calendar_event.view.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group name="analytic_data" string="Quick update name with project and task infos">
                    <group>
                        <field name="project_id"/>
                    </group>
                    <group  attrs="{'invisible': [('project_id', '=', False)]}">
                        <field name="task_id" domain="[('project_id', '=', project_id)]"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
